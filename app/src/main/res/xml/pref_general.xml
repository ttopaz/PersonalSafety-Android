<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="debugMode"
        android:title="Debug Mode"
        android:defaultValue="false"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1" />

    <PreferenceCategory
        android:title="Server"
        />
    <EditTextPreference
        android:key="prodServerIP"
        android:title="Address"
        android:defaultValue="none"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="debugServerIP"
        android:title="Debug Address"
        android:defaultValue="192.168.1.166"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="serverPort"
        android:title="Port"
        android:defaultValue="3100"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:singleLine="true"
        android:inputType="number"
        android:maxLines="1" />

    <PreferenceCategory
        android:title="Update"
        />
    <EditTextPreference
        android:key="trailRefresh"
        android:title="Trail Refresh Period"
        android:defaultValue="30000"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="locationRefresh"
        android:title="My Location Refresh Period"
        android:defaultValue="30000"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>